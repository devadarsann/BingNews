<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardItem"
    android:animateLayoutChanges="true"
    android:elevation="4dp"
    android:layout_margin="4dp">
 <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:padding="2dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black_grad"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/items">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="2dp"
        android:id="@+id/image"
        android:scaleType="fitCenter"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_toRightOf="@id/image"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:transitionName="article_heading"
            android:textSize="@dimen/small_text_size"
            android:padding="2dp"
            android:layout_gravity="bottom"
            android:textColor="@android:color/primary_text_light"
            android:id="@+id/article_heading"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textSize="10sp"
                android:paddingBottom="2dp"
                android:text="@string/category_entertainment"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/category"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/date"/>
        </LinearLayout>

    </LinearLayout>
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="2dp"
        android:id="@+id/extra_content"
        android:paddingEnd="2dp"
        android:layout_below="@id/items"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_alignWithParentIfMissing="true">
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="this is the description about this news"
            android:textColor="@color/cardview_dark_background" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp">
            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Read more at:" />
            <TextView
                android:id="@+id/provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentTop="true"
                android:textSize="10sp"
                android:layout_toEndOf="@+id/source" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
    </android.support.v7.widget.CardView>
